<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- ===== Database Connection Settings ===== -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gqt_hib?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Yannam@300323</property>

        <!-- ===== JDBC Connection Pool ===== -->
        <property name="hibernate.connection.pool_size">1</property>

        <!-- ===== SQL Dialect for MySQL 8 ===== -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- ===== Hibernate Behavior ===== -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <!-- ===== Schema Management ===== -->
        <!-- update = updates existing schema (safe)
             create = drops and recreates tables each run
             create-drop = drops tables on session close
             validate = only validates mappings -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- ===== Optional: Disable caching (for simplicity) ===== -->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="hibernate.cache.use_query_cache">false</property>

        <!-- ===== Annotated Entity Classes ===== -->
        <mapping class="hibernateManyToMany.Student"/>
        <mapping class="hibernateManyToMany.Course"/>

    </session-factory>
</hibernate-configuration>
